{
  "name": "marc-mabe/php-timelib",
  "description": "Playground for new date and time library for PHP",
  "type": "library",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.4"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.59.3",
    "phpstan/phpstan": "^2.1.14",
    "phpunit/phpunit": "12.1.0"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "time\\": "polyfill/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "time\\Tests\\": "tests/"
    }
  }
}
